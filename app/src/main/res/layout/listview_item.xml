<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE5DE"
    android:orientation="vertical"
    android:paddingRight="20dp">

    <View
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:id="@+id/view_0"
        android:layout_marginLeft="71dp"
        android:background="#A6A6A6"/>

    <View
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:id="@+id/view_1"
        android:layout_marginLeft="71dp"
        android:background="#A6A6A6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_time"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="8dp"
        android:text="2017-10-11"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/show_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_time"
        android:layout_marginLeft="40dp"
        android:text="9:30"
        android:layout_alignRight="@+id/view_2"
        android:layout_alignEnd="@+id/view_2" />



    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/image"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="65dp"
        android:src="@drawable/timeline_green"/>

    <View
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:id="@+id/view_2"
        android:layout_below="@+id/image"
        android:layout_marginLeft="71dp"
        android:background="#A6A6A6"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note_relative"
        android:layout_below="@+id/image"
        android:layout_marginTop="-20dp"
        android:layout_toRightOf="@+id/image"
        android:src="@drawable/timeline_content"
        android:background="@drawable/shape_corner"
        android:padding="10dp"
        android:elevation="3dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/image_1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/bg_green_circle_smic"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxEms="7"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="测试数据"
            android:textSize="12sp"/>

    </RelativeLayout>


</RelativeLayout>
